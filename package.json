{
  "name": "turbo-headshots",
  "version": "1.5.3",
  "description": "Headshot registration system for tethered photography",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "build-dmg": "electron-builder --mac dmg"
  },
  "author": "Turbo 360",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "electron-updater": "^6.7.3",
    "sharp": "^0.33.0",
    "smartcrop-sharp": "^2.0.0"
  },
  "build": {
    "appId": "com.turbo360.headshots",
    "productName": "Turbo Headshots",
    "artifactName": "${name}-${version}-${arch}.${ext}",
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/@img/**/*"
    ],
    "mac": {
      "category": "public.app-category.photography",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "identity": "James Anderson (ETURVK9WSA)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "notarize": {
        "teamId": "ETURVK9WSA"
      }
    },
    "dmg": {
      "title": "Turbo Headshots",
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "**/*",
      "!*.md"
    ],
    "publish": {
      "provider": "github",
      "owner": "turbo360",
      "repo": "Turbo-Headshots"
    }
  }
}
